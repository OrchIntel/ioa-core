*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pem binary
*.key binary
*.crt binary
*.p12 binary
*.pfx binary

# Documentation
*.md diff=markdown
*.rst diff=rst

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
*.yaml diff=yaml
*.yml diff=yaml
*.json diff=json
*.toml diff=toml
*.ini diff=ini
*.cfg diff=ini
*.conf diff=ini

# Source code
*.py diff=python
*.js diff=javascript
*.ts diff=typescript
*.html diff=html
*.css diff=css
*.sql diff=sql
*.r diff=r
*.R diff=r

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ethics Event Schema",
  "description": "Schema for ethics-related events in IOA Core",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier for the ethics event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "event_type": {
      "type": "string",
      "enum": ["ethics_precheck", "ethics_violation", "ethics_decision"],
      "description": "Type of ethics event"
    },
    "decision": {
      "type": "object",
      "properties": {
        "allow": {
          "type": "boolean",
          "description": "Whether the action was allowed"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the decision"
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of reasons for the decision"
        }
      },
      "required": ["allow", "confidence", "reasons"]
    },
    "input_metadata": {
      "type": "object",
      "description": "Metadata about the input being evaluated",
      "properties": {
        "size_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "content_type": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      }
    },
    "policy_config": {
      "type": "object",
      "description": "Configuration of the ethics policy used",
      "properties": {
        "strict_mode": {
          "type": "boolean"
        },
        "thresholds": {
          "type": "object",
          "description": "Decision thresholds for different criteria"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the event"
    }
  },
  "required": ["event_id", "timestamp", "event_type", "decision"],
  "additionalProperties": false
}

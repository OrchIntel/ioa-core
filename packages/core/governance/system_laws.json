{
  "version": "1.0",
  "laws": [
    {
      "id": "law1",
      "name": "Compliance Supremacy",
      "enforcement": "critical",
      "description": "All actions must comply with applicable regulations and standards",
      "scope": ["all_actions", "external_connectors", "data_flows"]
    },
    {
      "id": "law2", 
      "name": "Governance Precedence",
      "enforcement": "critical",
      "description": "Governance policies override all other operational decisions",
      "scope": ["policy_engine", "decision_making", "execution_flow"]
    },
    {
      "id": "law3",
      "name": "Auditability",
      "enforcement": "critical", 
      "description": "Every governed action must have a unique audit_id for traceability",
      "scope": ["all_actions", "logs", "events", "storage"]
    },
    {
      "id": "law4",
      "name": "Immutable Governance",
      "enforcement": "high",
      "description": "Reflex and auto-actions are bounded and cannot override core governance",
      "scope": ["reflex_actions", "auto_execution", "agent_behavior"]
    },
    {
      "id": "law5",
      "name": "Fairness & Non-Discrimination",
      "enforcement": "high",
      "description": "All outputs and decisions must meet fairness thresholds and avoid bias",
      "scope": ["llm_outputs", "decision_making", "user_interactions"]
    },
    {
      "id": "law6",
      "name": "Human Oversight Supremacy (HITL)",
      "enforcement": "high",
      "description": "Human approval required for blocked actions and high-risk decisions",
      "scope": ["blocked_actions", "high_risk_operations", "policy_overrides"]
    },
    {
      "id": "law7",
      "name": "Sustainability Stewardship",
      "enforcement": "high",
      "description": "Minimize environmental impact through energy budgeting, green routing, and carbon tracking",
      "scope": ["energy_consumption", "model_selection", "resource_allocation", "carbon_tracking"]
    }
  ],
  "policy": {
    "conflict_resolution": ["law1", "law2", "law6", "law5", "law3", "law4", "law7"],
    "jurisdiction": {
      "default": "global",
      "affinity": ["EU", "US", "air-gapped"],
      "conflict_rules": {
        "GDPR_vs_SOX": "GDPR takes precedence for EU data",
        "retention_vs_deletion": "Longest retention period applies"
      }
    },
    "fairness": {
      "threshold": 0.2,
      "metrics": ["gini_coefficient", "disparity_ratio", "bias_detection"],
      "mitigation_strategies": ["output_filtering", "prompt_adjustment", "human_review"]
    },
    "sustainability": {
      "budgets": {
        "task_kwh": 0.010,
        "run_kwh": 0.250,
        "project_kwh": 5.000
      },
      "warn_fraction": 0.8,
      "block_fraction": 1.0,
      "weights": {
        "quality": 0.6,
        "energy": 0.3,
        "latency": 0.1
      },
      "region": "auto",
      "allow_hitl_override": true
    }
  },
  "signature": {
    "alg": "RS256",
    "kid": "dev-key-2025-09",

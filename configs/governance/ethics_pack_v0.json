{
  "privacy": {
    "enabled": true,
    "mode": "monitor",
    "pii_entities": [
      "PERSON",
      "EMAIL_ADDRESS", 
      "PHONE_NUMBER",
      "US_SSN"
    ],
    "action": "mask"
  },
  "fairness": {
    "enabled": true,
    "mode": "monitor",
    "probes": [
      "counterfactual_swap",
      "group_parity"
    ],
    "metrics": [
      "demographic_parity",
      "equalized_odds"
    ],
    "thresholds": {
      "warn": 0.1,
      "block": 0.2
    }
  },
  "safety": {
    "enabled": true,
    "mode": "monitor",
    "lexicons": [
      "profanity",
      "hate_skeleton"
    ],
    "action": "block_with_override"
  }
}

{
  "enabled": true,
  "mode": "monitor",
  "energy_budget_kwh_per_100k": 1.0,
  "thresholds": { 
    "warn": 0.8, 
    "delay": 0.9, 
    "block": 1.0 
  },
  "override_ttl_minutes": 30,
  "model_factors_kwh_per_100k": {
    "gpt-4o-mini": 0.4,
    "claude-3-haiku": 0.35,
    "gemini-1.5-pro": 0.5,
    "llama-3-8b-instruct": 0.25,
    "default": 0.45
  },
  "enforcement_modes": {
    "monitor": {
      "description": "Log only, no blocks (OSS safe)",
      "block_actions": false,
      "delay_actions": false,
      "log_warnings": true
    },
    "graduated": {
      "description": "Warn @0.8, delay @0.9, block+override @1.0",
      "block_actions": true,
      "delay_actions": true,
      "log_warnings": true,
      "allow_overrides": true
    },
    "strict": {
      "description": "Block any over-budget requests",
      "block_actions": true,
      "delay_actions": false,
      "log_warnings": true,
      "allow_overrides": false
    }
  },
  "metrics": {
    "output_path": "artifacts/lens/sustainability/metrics.jsonl",
    "retention_days": 90,
    "aggregation_interval_hours": 24
  },
  "audit": {
    "enrich_entries": true,
    "include_energy_breakdown": true,
    "track_model_usage": true
  }
}
